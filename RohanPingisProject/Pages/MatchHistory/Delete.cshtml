@page
@model RohanPingisProject.Pages.MatchHistory.DeleteModel
@{
    ViewData["Title"] = "Ta bort Match";
}
<section>
    <div class="container">
        <div class="section-title">
            <h2>Delete Customer</h2>
        </div>
        <div class="table-responsive d-flex justify-content-center w-50 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form method="post" class="row g-3">
                        <div class="col-12 text-center">
                            <p><b>Vänta!</b></p>
                            <p>Är du säker på att du vill ta bort den här matchen?</p>
                            <p>Denna åtgärd kommer tar bort matchen.</p>
                            <p><b>Är du säker?</b></p>
                        </div>

                        <div class="card-footer pt-4 d-flex justify-content-center">
                            <button type="submit"
                                    class="btn btn-danger m-2">
                                <i class="fa-solid fa-trash"></i>
                                Ta bort
                            </button>
                            <a asp-page="/MatchHistory/Index"
                               asp-route-id="@Model.MatchId"
                               class="btn btn-secondary m-2">
                                Avbryt
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>